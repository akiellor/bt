#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'bt/em_cli'

EM.run {
  ready = Ready.new do |commit, stage|
    puts commit, stage
    agent = Agent.new "#{commit}/#{stage}"

    go = Go.new commit, stage
    
    agent.leading { go.build }
    agent.stopped { go.stop }
    agent.stopped { ready.next }

    go.done { agent.stop }
  end
 
  ready.none { EM.stop }

  ready.next
}

